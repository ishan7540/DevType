# .env.example
# This file contains environment variables for the server.
# Rename this file to .env and fill in the values.

# Port for the server to listen on
PORT=5000

# MongoDB Connection String
# You can get a free one from MongoDB Atlas (https://www.mongodb.com/atlas/database)
# Format: mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/typing-test-db
MONGODB_URI=mongodb://localhost:27017/typing-test-db

# Secret key for signing JWT tokens
# You can generate a random string for this (e.g., type random characters)
JWT_SECRET=my_super_secret_jwt_key_change_this
